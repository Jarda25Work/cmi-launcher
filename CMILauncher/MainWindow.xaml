<Window x:Class="CMILauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="캛MI Launcher" 
        Height="800" Width="800"
        WindowStartupLocation="CenterScreen"
    MinHeight="600" MinWidth="600"
    PreviewKeyDown="Window_PreviewKeyDown">
    
    <Grid>
        <!-- WebView2 zobrazuj칤c칤 celou aplikaci launcher.cmi.cz/app -->
        <!-- Source je odstran캩n - navigace se 콏칤d칤 z k칩du po inicializaci CoreWebView2 -->
        <wv2:WebView2 x:Name="webView" DefaultBackgroundColor="Transparent" />

        <!-- 칔vodn칤 informa캜n칤 obrazovka -->
        <Grid x:Name="WelcomeScreen"
              Background="White"
              Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="1" 
                    Background="White" 
                    Padding="40" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    MaxWidth="600">
                <StackPanel>
                    <!-- Logo/Ikona -->
                    <Grid Width="80" Height="80" Margin="0,0,0,24" HorizontalAlignment="Center">
                        <Ellipse Fill="#2196F3" />
                        <TextBlock Text="캛MI" 
                                   FontSize="22" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Grid>
                    
                    <!-- N치zev aplikace -->
                    <TextBlock Text="캛MI Launcher"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#333"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,16"/>
                    
                    <!-- Hlavn칤 informace -->
                    <TextBlock x:Name="WelcomeMessage"
                               Text="P콏ipojuji se k aplika캜n칤mu port치lu..."
                               FontSize="16"
                               Foreground="#666"
                               TextAlignment="Center"
                               Margin="0,0,0,24"/>
                    
                    <!-- Informa캜n칤 box o certifik치tech -->
                    <Border Background="#E3F2FD" 
                            BorderBrush="#2196F3" 
                            BorderThickness="1" 
                            CornerRadius="4" 
                            Padding="16" 
                            Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="游눠 Informace o p콏ihl치코en칤"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#1976D2"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="P콏i prvn칤m spu코t캩n칤 budete po쮂멳치ni o zad치n칤 PIN k칩du k va코emu certifik치tu (eOb캜anka, kvalifikovan칳 certifik치t). Toto je bezpe캜nostn칤 opat콏en칤 pro ov캩콏en칤 va코칤 identity."
                                       FontSize="12"
                                       Foreground="#424242"
                                       TextWrapping="Wrap"
                                       LineHeight="16"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Progress bar -->
                    <Grid>
                        <Rectangle x:Name="ProgressBackground" 
                                   Height="4" 
                                   Fill="#E0E0E0" 
                                   RadiusX="2" 
                                   RadiusY="2"/>
                        <Rectangle x:Name="ProgressBar" 
                                   Height="4" 
                                   Fill="#2196F3" 
                                   RadiusX="2" 
                                   RadiusY="2"
                                   HorizontalAlignment="Left"
                                   Width="0"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Overlay pro v칳padky p콏ipojen칤 -->
        <Grid x:Name="RetryOverlay"
              Background="#AA000000"
              Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="1" Background="#222" Padding="24" CornerRadius="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock x:Name="RetryMessage"
                               Text="Nelze se p콏ipojit k serveru. Zkou코칤m to znovu..."
                               Foreground="White"
                               FontSize="16"
                               Margin="0,0,0,12"
                               TextAlignment="Center"/>
                    <Button x:Name="RetryButton" Content="Zkusit znovu" Width="160" Click="RetryButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Custom Certificate Dialog -->
        <Grid x:Name="CertificateDialog"
              Background="#80000000"
              Visibility="Collapsed">
            <Border Background="White" 
                    CornerRadius="10" 
                    Padding="30" 
                    MaxWidth="500"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="315" ShadowDepth="5" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <!-- Header -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Icon -->
                        <Grid Width="50" Height="50" Margin="0,0,15,0">
                            <Ellipse Fill="#2196F3" />
                            <TextBlock Text="游" 
                                       FontSize="24" 
                                       Foreground="White" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Grid>
                        
                        <!-- Title -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="V칳b캩r zp콢sobu p콏ihl치코en칤" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#333"/>
                            <TextBlock x:Name="CertDialogSubtitle"
                                       Text="Nalezen komer캜n칤 certifik치t pro p콏ihl치코en칤" 
                                       FontSize="12" 
                                       Foreground="#666" 
                                       Margin="0,3,0,0"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Certificate Info -->
                    <TextBlock x:Name="CertDialogMessage"
                               Text="Nalezen칳 certifik치t: [Certificate Name]"
                               FontSize="13"
                               Foreground="#333"
                               Margin="0,0,0,20"
                               TextWrapping="Wrap"/>
                    
                    <!-- Instructions -->
                    <TextBlock Text="Chcete pokra캜ovat s certifik치tem nebo se p콏ihl치sit bez n캩j?"
                               FontSize="13"
                               Foreground="#555"
                               Margin="0,0,0,20"
                               TextWrapping="Wrap"/>
                    
                    <!-- Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Use Certificate Button -->
                        <Button x:Name="UseCertificateButton"
                                Grid.Column="0"
                                Content="Pou쮂셦 certifik치t"
                                Background="#2196F3"
                                Foreground="White"
                                FontWeight="Bold"
                                Padding="10,8"
                                BorderThickness="0"
                                Click="UseCertificateButton_Click"
                                Style="{DynamicResource {x:Static ToolBar.ButtonStyleKey}}"/>
                        
                        <!-- Continue Without Certificate Button -->
                        <Button x:Name="ContinueWithoutCertButton"
                                Grid.Column="2"
                                Content="Bez certifik치tu"
                                Background="#FFC107"
                                Foreground="White"
                                FontWeight="Bold"
                                Padding="10,8"
                                BorderThickness="0"
                                Click="ContinueWithoutCertButton_Click"
                                Style="{DynamicResource {x:Static ToolBar.ButtonStyleKey}}"/>
                        
                        <!-- Cancel Button -->
                        <Button x:Name="CancelCertButton"
                                Grid.Column="4"
                                Content="Zru코it"
                                Background="#F44336"
                                Foreground="White"
                                FontWeight="Bold"
                                Padding="10,8"
                                BorderThickness="0"
                                Click="CancelCertButton_Click"
                                Style="{DynamicResource {x:Static ToolBar.ButtonStyleKey}}"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
